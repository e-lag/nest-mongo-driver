{
    "name": "nest-mongo-driver",
    "version": "0.1.0",
    "description": "Nest module for working with mongo db.",
    "author": "Eldari Lagvilava",
    "license": "MIT",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "scripts": {
        "start:dev": "tsc -w",
        "build": "tsc",
        "prepare": "npm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "keywords": [
        "nestjs"
    ],
    "publishConfig": {
        "access": "restricted"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/e-lag/nest-mongo-driver.git"
    },
    "bugs": "https://github.com/e-lag/nest-mongo-driver/issues",
    "peerDependencies": {},
    "dependencies": {
        "mongodb": "^4.8.0"
    },
    "devDependencies": {
        "@nestjs/common": "^8.4.6",
        "@nestjs/config": "^2.2.0",
        "@types/mongodb": "^4.0.7",
        "@types/node": "^17.0.22",
        "rxjs": "^7.5.5",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.2"
    },
    "engines": {
        "node": ">=16.13.1"
    }
}
